<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dip"
    android:layout_height="160dp"
    android:background="@drawable/chat_record_bg"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/rl_im_record"
        android:layout_width="wrap_content"
        android:layout_height="90dp">



        <ImageView
            android:id="@+id/im_record_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/im_record_mic" />

        <ImageView
            android:id="@+id/im_chat_record_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:src="@drawable/recording_3" />



        <ImageView
            android:id="@+id/iv_im_cancel_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/im_cancel_record"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_im_record"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/record_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_im_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手指上滑取消发送"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>