<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/len_4"
    android:paddingEnd="@dimen/len_16"
    android:paddingStart="@dimen/len_56"
    android:paddingTop="@dimen/len_4">

    <com.longbei.im_push_service_sdk.common.app.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:layout_alignParentRight="true"
        android:padding="1px"
        android:src="@drawable/default_portrait"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />


    <ImageView
        android:id="@+id/im_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/len_8"
        android:layout_marginTop="@dimen/font_6"
        android:layout_toLeftOf="@id/im_portrait"
        >


    </ImageView>




    <com.longbei.im_push_service_sdk.common.app.kit.ui.widget.Loading
        android:id="@+id/loading"
        android:layout_width="@dimen/len_20"
        android:layout_height="@dimen/len_20"
        android:layout_toLeftOf="@id/im_image"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:padding="1px"
        app:gAutoRun="false"
        app:gBackgroundColor="@null"
        app:gForegroundColor="@color/colorAccent"
        app:gForegroundLineSize="1dp"
        app:gProgressFloat="1" />

</RelativeLayout>