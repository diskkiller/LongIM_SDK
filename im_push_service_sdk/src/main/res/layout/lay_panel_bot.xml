<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_panel_bot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/im_attach"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/amber_a700"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/im_add_pic"
                    android:layout_width="@dimen/len_60"
                    android:layout_height="@dimen/len_60"
                    android:background="@drawable/btn_im_select_photo"
                    android:clickable="true" />

                <TextView
                    style="@style/im_add_attach_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相册" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/im_take_photo"
                    android:layout_width="@dimen/len_60"
                    android:layout_height="@dimen/len_60"
                    android:background="@drawable/btn_im_take_photo"
                    android:clickable="true" />

                <TextView
                    style="@style/im_add_attach_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="照相" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/im_add_location"
                    android:layout_width="@dimen/len_60"
                    android:layout_height="@dimen/len_60"
                    android:background="@drawable/btn_im_select_location"
                    android:clickable="true" />

                <TextView
                    style="@style/im_add_attach_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>